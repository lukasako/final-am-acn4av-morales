<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAgregarMov"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/tvAgregarTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agregar Movimiento"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAgregarMov"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollAgregar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvAgregarTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnAddConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:paddingTop="8dp"/>

            <EditText
                android:id="@+id/etNombreAdd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:hint="Ej: Transporte"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto"
                android:textStyle="bold"
                android:paddingTop="12dp"/>

            <EditText
                android:id="@+id/etMontoAdd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="numberDecimal"
                android:hint="350.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textStyle="bold"
                android:paddingTop="12dp"/>

            <AutoCompleteTextView
                android:id="@+id/actvCategoria"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:hint="Seleccionar categoría"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medio de pago"
                android:textStyle="bold"
                android:paddingTop="12dp"/>

            <AutoCompleteTextView
                android:id="@+id/actvMedioPago"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:hint="Seleccionar cuenta"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textStyle="bold"
                android:paddingTop="12dp"/>

            <EditText
                android:id="@+id/etFechaAdd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:focusable="false"
                android:hint="dd/mm/aa"/>

            <!-- Checkbox ingreso / fijo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:id="@+id/cbEsIngresoAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Es ingreso" />

                <CheckBox
                    android:id="@+id/cbEsFijoAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Es fijo"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAddConfirm"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Agregar"
        android:textColor="@color/button_text"
        android:background="@drawable/rounded_button"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
