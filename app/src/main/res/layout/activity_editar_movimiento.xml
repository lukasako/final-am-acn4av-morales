<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarEditarMov"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/primary_blue"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvEditarTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Movimiento"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#3A3A3A"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarEditarMov"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scroll con inputs -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvEditarTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Categoría -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textColor="#444"
                android:textStyle="bold"
                android:paddingTop="14dp"/>

            <AutoCompleteTextView
                android:id="@+id/categoriaPickerEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Seleccionar"
                android:paddingHorizontal="20dp"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:textColor="#333"
                android:textColorHint="#999"/>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#444"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <EditText
                android:id="@+id/etNombreEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="20dp"
                android:hint="Ingresar nombre..."
                android:textColor="#333"
                android:textColorHint="#999"/>

            <!-- Movimiento fijo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Es movimiento fijo"
                android:textColor="#444"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <AutoCompleteTextView
                android:id="@+id/esFijoPickerEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Seleccionar"
                android:paddingHorizontal="20dp"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:textColor="#333"
                android:textColorHint="#999"/>

            <!-- Cuenta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta del movimiento"
                android:textColor="#444"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <AutoCompleteTextView
                android:id="@+id/medioPagoPickerEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Seleccionar"
                android:paddingHorizontal="20dp"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:textColor="#333"
                android:textColorHint="#999"/>

            <!-- Tipo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de movimiento"
                android:textColor="#444"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <AutoCompleteTextView
                android:id="@+id/tipoPickerEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Ingreso"
                android:paddingHorizontal="20dp"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:textColor="#333"
                android:textColorHint="#999"/>

            <!-- Importe -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Importe"
                android:textColor="#444"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <EditText
                android:id="@+id/etMontoEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:inputType="numberDecimal"
                android:paddingHorizontal="20dp"
                android:hint="Importe"
                android:textColor="#333"
                android:textColorHint="#999"/>

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etFechaEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:padding="14dp"
                android:focusable="false"
                android:hint="dd/mm/aa"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

        </LinearLayout>
    </ScrollView>

    <!-- Botón confirmar -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:text="Confirmar"
        android:textColor="#FFF"
        android:background="@drawable/bg_button_pill"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
