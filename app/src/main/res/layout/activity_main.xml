<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.GastApp.Toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintBottom_toTopOf="@+id/headerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgNavLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gastapp_icon" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding_sm"
            android:src="@drawable/ic_logout"
            app:tint="@color/button_text" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/padding_small"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_wallet" />

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_greeting"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/title_text" />
    </LinearLayout>

    <!-- Card de Saldo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSaldo"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:padding="@dimen/padding_medium">

            <LinearLayout
                android:id="@+id/layoutSaldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/tvSaldoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saldo_total"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/saldo_text" />

                <TextView
                    android:id="@+id/tvSaldoAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/saldo_inicial"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/saldo_text"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="@dimen/padding_large"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvActualMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mes_actual"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/saldo_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="@dimen/padding_small"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMonthUp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginEnd="@dimen/padding_md"
                        android:text="@string/saldo_mes_ingreso"
                        android:textColor="@color/accent_green"
                        android:textSize="@dimen/title_text" />

                    <TextView
                        android:id="@+id/tvMonthDown"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="@string/saldo_mes_egreso"
                        android:textColor="@color/danger"
                        android:textSize="@dimen/title_text" />
                </LinearLayout>

            </LinearLayout>

            <!-- GrÃ¡fico (oculto hasta cargar) -->
            <LinearLayout
                android:id="@+id/layoutGrafico"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>


    <!-- Scroll principal -->
    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/padding_medium"
        app:layout_constraintTop_toBottomOf="@id/cardSaldo"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/rounded_button"
                android:text="@string/ingresar_gasto"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/btnMovimientos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/rounded_button"
                android:text="@string/movimientos"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/btnCategorias"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/rounded_button"
                android:text="@string/categorias"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/btnMovFijos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@drawable/rounded_button"
                android:text="@string/movimientos_fijos"
                android:textColor="@color/button_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_medium">

                <TextView
                    android:id="@+id/tvUltimosMovimientos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_ultimos_gastos"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_xl"
                    android:layout_marginBottom="@dimen/padding_sm"/>

                <LinearLayout
                    android:id="@+id/llRecentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <Button
                    android:id="@+id/btnVerTodos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_todos"
                    android:textColor="@color/primary_blue"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_sm"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            app:tint="@color/button_text"/>

        <ImageButton
            android:id="@+id/navSummary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bank"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descripcion_cuentas"
            app:tint="@color/button_text"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
